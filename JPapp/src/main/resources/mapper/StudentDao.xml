<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjtu.dao.StudentDao">


    <insert id="insert" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into student(id,name,sex,email,age,password)
        values (#{id}, #{name},#{sex},#{email},#{age},#{password})
    </insert>

    <delete id="deleteByNum" parameterType="string">
        delete from student where id = #{id}
    </delete>

    <!--    将id为id的学生的exist值设为1-->
    <update id="reviveStudent">
        update student set exist = 1 where id = #{id}
    </update>

    <select id="findAll" resultType="Student">
        select * from student
    </select>

    <select id="findByNum" resultType="Student">
        select * from student where id = #{id}
    </select>

    <update id="updatePassword">
        update student set password = #{password}
        where id = #{id}
    </update>

    <update id="updateEmail">
        update student set email = #{email}
        where id = #{id}
    </update>

    <update id="updateInfo" parameterType="Student">
        update student set name = #{name},age = #{age},
        sex = #{sex} where id = #{id}
    </update>

    <update id="alterStudentByID">
        update student set name = #{name},age = #{age},sex = #{sex},password = #{password},email = #{email}
        where id = #{id}
    </update>


</mapper>