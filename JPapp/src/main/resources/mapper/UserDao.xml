<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjtu.dao.UserDao">


    <insert id="insert" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into tb_user(user_name,password,gender,addr) values (#{username}, #{password},#{gender},#{addr})
    </insert>

    <delete id="deleteByName" parameterType="string">
        delete from tb_user where user_name = #{username}
    </delete>

    <select id="findAll" resultType="user">
        select * from tb_user
    </select>

    <select id="findByName" resultType="user">
        select * from tb_user where user_name = #{username}
    </select>

    <update id="modifyPassword">
        update tb_user set password = #{password} where user_name = #{username}
    </update>


</mapper>