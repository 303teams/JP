<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjtu.dao.ScoreDao">

    <!--    插入作业号为contentID，对应的评分人为sno的score-->
    <insert id="insertScore" parameterType="Score" useGeneratedKeys="true" keyProperty="scoreID">
        insert into score(contentID,sno,score,time,content,homeworkID)
        values (#{contentID}, #{sno},#{score},#{time},#{content},#{homeworkID})
    </insert>

<!--    <update id="setCTScore"  parameterType="integer">-->
<!--        update score-->
<!--        SET score = #{score}-->
<!--        WHERE contentID = #{contentID}-->
<!--        AND sno = #{sno}-->
<!--    </update>-->

    <update id="setInvalid">
        UPDATE score
        SET valid = 0
        WHERE scoreID = #{scoreID}
    </update>

    <!--    作业号为contentID，对应的评分人为sno的打分信息-->
    <select id="findxCTById" resultType="com.bjtu.pojo.Content">
        SELECT
        c.contentID,
        c.fileName as fileName,
        COALESCE(score.score, 0) as score,
        COALESCE(score.content, 'No comment') as comment
        FROM
        content c
        LEFT JOIN score ON c.contentID = score.contentID AND score.sno = #{sno}
        WHERE
        c.contentID = #{contentID};

    </select>

    <select id="findSCByCID" resultType="com.bjtu.pojo.Score">
        SELECT contentID,score,time,content,scoreID,valid
        FROM score
        WHERE contentID = #{contentID}
    </select>

</mapper>