<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjtu.dao.AdminDao">


    <insert id="insert" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into admin(id,password,email,name) values (#{id}, #{password},#{email},#{name})
    </insert>

    <insert id="insertStudent" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into student(id,password,sex,name,age,email) values (#{id}, #{password},#{sex},#{name},#{age},#{email})
    </insert>

    <insert id="insertTeacher" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into teacher(id,password,sex,name,age,email) values (#{id}, #{password},#{sex},#{name},#{age},#{email})
    </insert>

    <insert id="insertCourse" parameterType="Course" useGeneratedKeys="true" keyProperty="cno">
        insert into course(cno,cname) values (#{cno}, #{cname})
    </insert>

    <delete id="deleteCourseByCno" parameterType="string">
        delete from course where cno = #{cno}
    </delete>

    <select id="findStudentByID" resultType="Student">
        select * from student where id = #{id}
    </select>

    <select id="findTeacherByID" resultType="Teacher">
        select * from teacher where id = #{id}
    </select>

    <select id="findCourseByCno" resultType="Course">
        select * from course where cno = #{cno}
    </select>

    <delete id="deleteByNum" parameterType="string">
        delete from admin where id = #{num}
    </delete>

    <!--    将id为id的学生的exist值设为0-->
    <update id="deleteStudentByID">
        update student set exist = 0
        where id = #{id}
    </update>

    <update id="deleteTeacherByID">
        <!-- 将id为id的教师的exist值设为0 -->
        update teacher set exist = 0 where id = #{id};
    </update>

    <!-- 将老师为id执教的课程中的tno设为null -->
    <update id="deleteTeacherInCourse">
        update course set tno = null
        where tno = #{id}
    </update>

    <select id="findAllStudent" resultType="Student">
        select * from student
        where exist = 1
    </select>

    <select id="findAllTeacher" resultType="Teacher">
        select * from teacher
        where exist = 1
    </select>

    <select id="findAllCourse" resultType="Course">
        select course.cno,course.cname,course.tno,teacher.name as tname
        from course
        left join teacher on course.tno = teacher.id
    </select>

    <select id="findAll" resultType="Admin">
        select * from admin
    </select>

    <select id="findByNum" resultType="Admin">
        select * from admin where id = #{num}
    </select>

    <update id="updateEmail">
        update admin set email = #{email}
        where id = #{id}
    </update>

</mapper>